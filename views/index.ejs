<main class="container margin-top">
  <div class="row justify-content-center align-items-center">
    <div
      class="col-12 col-md-6 col-lg-8 order-lg-1 order-1 card shadow-sm p-10"
    >
      <form>
        <div class="row g-3">
          <!-- col -->
          <div class="mb-lg-2 mb-2">
            <h1 class="mb-1 h2 fw-bold">Your portfolio project form</h1>
            <p>
              Enter all Information and show on project's on your portfolio
              website.
            </p>
          </div>
          <div class="col-12">
            <!-- input --><input
              type="text"
              class="form-control"
              id="title"
              placeholder="Enter your title"
              name="title"
              required
            />
          </div>

          <div class="col-12">
            <textarea
              id="details"
              cols="30"
              rows="3"
              id="details"
              placeholder="Enter your description"
              class="form-control"
              required
              name="details"
              autocomplete=""
            ></textarea>
          </div>
          <div class="col-6">
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Enter your category"
              name="category"
              required
            />
            <small class="text-secondary">exp: your-category-name</small>
          </div>
          <div class="col-6">
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Enter your author name"
              name="author"
              required
            />
          </div>

          <!-- col -->
          <div class="col-6">
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Enter your live url"
              name="liveLink"
              required
            />
          </div>
          <div class="col-6">
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Enter your source code url"
              name="sourceCode"
              required
            />
          </div>
          <div class="col-12">
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Your project image url"
              name="image"
              required
            />
          </div>
          <div class="col-12">
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Your avatar image url"
              name="avatar"
              required
            />
          </div>

          <!-- btn -->
          <div class="col-12 d-grid">
            <button
              type="button"
              hx-post="/project"
              hx-target="body"
              class="btn btn-primary"
            >
              Submit Your Project
            </button>
          </div>
          <!-- text -->
        </div>
      </form>
    </div>
  </div>
</main>

