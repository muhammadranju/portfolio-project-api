<%- include('./partials/header.ejs') %>

<!-- header -->
<%- include('./partials/navbar.ejs') %>

<main class="container margin-top">
  <div class="row justify-content-center align-items-center">
    <div
      class="col-12 col-md-6 col-lg-8 order-lg-1 order-1 card shadow-sm p-10"
    >
      <form action="/update-project" method="post">
        <div class="row g-3">
          <!-- col -->
          <div class="mb-lg-2 mb-2">
            <h1 class="mb-1 h2 fw-bold">Update portfolio project</h1>
          </div>
          <div class="col-12">
            <label for="title">
              Your Title<strong class="text-danger">*</strong>
            </label>
            <!-- input --><input
              type="text"
              class="form-control"
              id="title"
              placeholder="Enter your title"
              name="title"
              value="<%=project.title %>"
              title="<%=project.title %>"
            />
          </div>

          <div class="col-12">
            <label for="title">
              Your Description<strong class="text-danger">*</strong>
            </label>
            <textarea
              id="details"
              cols="30"
              rows="4"
              id="details"
              placeholder="Enter your description"
              class="form-control"
              required
              name="details"
            >
<%=project.details %>
</textarea
            >
          </div>
          <div class="col-6">
            <label for="title">
              Your Category<strong class="text-danger">*</strong>
            </label>
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Enter your category"
              name="category"
              required
              value="<%=project.category %>"
              title="<%=project.category %>"
            />
            <small class="text-secondary">exp: your-category-name</small>
          </div>
          <div class="col-6">
            <label for="title">
              Your Author Name<strong class="text-danger">*</strong>
            </label>
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Enter your author name"
              name="author"
              required
              autocomplete="Muhammad Ranju"
              value="<%=project.author %>"
              title="<%=project.author %>"
            />
          </div>

          <!-- col -->
          <div class="col-6">
            <label for="title">
              Your Live URL <small class="text-dark">(optional)</small>
            </label>
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Enter your live url"
              name="liveLink"
              value="<%=project.liveLink %>"
              title="<%=project.liveLink %>"
            />
          </div>
          <div class="col-6">
            <label for="title">
              Your Source Code<strong class="text-danger">*</strong>
            </label>
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Enter your source code url"
              name="sourceCode"
              required
              title="<%=project.sourceCode %>"
              value="<%=project.sourceCode %>"
            />
          </div>
          <div class="col-6">
            <label for="title">
              Your Project Image<strong class="text-danger">*</strong>
            </label>
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Your project image url"
              name="image"
              required
              value="<%=project.image %>"
              title="<%=project.image %>"
            />
          </div>
          <div class="col-6">
            <label for="title">
              Your Avatar Image<strong class="text-danger">*</strong>
            </label>
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Your avatar image url"
              name="avatar"
              required
              autocomplete="https://avatars.githubusercontent.com/u/80270685?v=4"
              value="<%=project.avatar %>"
              title="<%=project.avatar %>"
            />
          </div>

          <div class="col-12">
            <label for="title">
              Your Tags<strong class="text-danger">*</strong>
            </label>
            <!-- input --><input
              type="text"
              class="form-control"
              placeholder="Your tags ex: tag1, tag2, tag3"
              name="tags"
              value="<%=project.tags %>"
              title="<%=project.tags %>"
              required
            />
          </div>

          <!-- input --><input
            type="text"
            hidden
            class="form-control"
            name="userId"
            value="<%=project._id %>"
          />

          <!-- btn -->
          <div class="col-12 d-grid">
            <button type="submit" hx-target="body" class="btn btn-primary">
              Update Project
            </button>
          </div>
          <!-- text -->
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('./partials/footer.ejs') %>
